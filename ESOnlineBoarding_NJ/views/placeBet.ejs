          <input type="Number" class="form-control" name="amount" id="exampleFormControlInput1" placeholder="In Â£"
            step="0.01">
        </div>
        <div class="form-group">
          <label for="exampleFormControlSelect1">Who are you betting On</label>
          <select name="betOn" class="form-control" id="exampleFormControlSelect1">
