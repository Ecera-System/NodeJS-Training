<%- include("adminheader.ejs")%>
<script>document.getElementById("categories").classList.add("active")</script>
 <article class="content dashboard-page">
	 <a href="/admin/addCategory"> <button class="btn btn-success" style="color:white">
		 Create New Category
		 </button></a>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">S.No.</th>
      <th scope="col">Category</th>
		<th scope="col">Leagues</th>
	
		<th scope="col">Action</th>
    </tr>
  </thead>
	<% var i=1;categories.forEach(function(category)
				   {%>
		<tr>
		<td><%=i%></td>
			<td><i ><img style="width:30px;height:30px"src="<%=category.logo%>"></i>  <%=category.name%></td>
			<td><%category.leagues.forEach(function(league){%>
				<li><%=league.name%></li>
				<%})%></td>
			<td><a href="/admin/categories/<%=category._id%>/edit" ><button class="btn btn-warning">
				Edit
				</button></a>  <form style ="display:inline" action = "/admin/categories/<%=category._id%>?_method=DELETE" method ="POST">
			<button class="btn btn-danger btn-xs"onclick="return confirm('Are you sure you want to delete this item?');">
				Delete
			</button>
		</form></td><%i++;%>
	</tr>
	<%})%>
  <tbody>
    
  </tbody>
</table>
</article>
<%- include("adminfooter.ejs")%>