<%- include("adminheader.ejs")%>
<script>document.getElementById("wallet").classList.add("active")</script>
 <article class="content dashboard-page">
	 <h1 class="text-center">Withdrawal Requests</h1>
	 <p class="text-center">
		 Once processed, you can go ahead and delete them
	 </p>
		 <table class="table table-striped"style="font-weight:100">
  <thead>
    <tr>
      <th scope="col">User</th>
      <th scope="col">Amount to be withdrawn (GBP)</th>
      <th scope="col">PayPal Details</th>
	<th scope="col">Action</th>
    </tr>
  </thead>
			 <%withdrawals.forEach(function(withdrawal)
								  {%>
				 <tr>
      <td scope="col"><%=withdrawal.username%></td>
      <td scope="col"><%=withdrawal.amount%></td>
      <td scope="col"><%=withdrawal.paypal%></td>
	<td scope="col"><form style="display:inline" action ="/admin/withdrawals/<%=withdrawal._id%>?_method=DELETE" method="POST">
   <button class="btn btn-danger btn-xs"onclick="return confirm('Are you sure you want to delete this item?');">
				Delete
			</button>
		</form> </td>
    </tr>
			<% })%>
	 </table>
	 
</article>