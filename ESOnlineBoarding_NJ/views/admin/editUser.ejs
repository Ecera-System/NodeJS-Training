	<input class = "form-control form-group" type="text" value="<%=x%>"name = "user[isAdmin]" placeholder = "Admin Status - Yes for Admin Access else No">
		
	
		 <button class ="btn btn-primary btn-block"style="margin-bottom:20px">
			 Submit
		</button>
</form>

	</div></div>
</div>
