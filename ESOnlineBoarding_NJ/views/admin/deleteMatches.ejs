<%- include("adminheader.ejs")%>
<script>document.getElementById("bets").classList.add("active")</script>
 <article class="content dashboard-page">
	 <form action="/admin/matches?_method=DELETE" method="POST">
		 <button type="submit" onclick="return confirm('Are you sure you want to delete the selected matches?Changes cannot be undone');"class="pull-right btn btn-danger">
			 Delete Selected
		 </button>
	 
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">S.No.</th>
      <th scope="col">Team 1</th>
      <th scope="col">Team 2</th>
      <th scope="col">Odds - Team 1</th>
		<th scope="col">Odds - Draw</th>
	<th scope="col">Odds - Team 2</th>
	
	<th scope="col">Status</th>
		<th scope="col">Winner</th>
	
    </tr>
  </thead>
	<% var i=1;matches.forEach(function(match)
				   {%>
		<tr>
		<td><input type="checkbox" name="del[]" value="<%=match._id%>"></td>
		<td><%=match.t1_name%></td>
			<td><%=match.t2_name%></td>
			<td><%=match.t1_odds%></td>
		
		<td><%=match.d_odds%></td>
			<td><%=match.t2_odds%></td>
			
			<td><%=match.status%></td>
			<td><%if(match.winner==0){%>Not Declared<%}else if(match.winner==1){%>Team 1<%}else if(match.winner==2){%>Team 2<%}else{%>Draw<%}%>
			</td>
			
	</tr>
	<%})%>
  <tbody>
    
  </tbody>
		 </table></form>
</article>
<%- include("adminfooter.ejs")%>